<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class= "container" style="margin:20px 0 0 0">
    <div class=" text-style field form-label-group">
      <%= form.text_field :first, class: 'form-control', placeholder: 'First Name', :required => true %>
    </div>

    <div class=" text-style field form-label-group">
      <%= form.text_field :last, class: 'form-control', placeholder: 'Last Name', :required => true %>
    </div>

    <div class=" text-style field form-label-group">
      <%= form.password_field :password, class: 'form-control', placeholder: 'Password', :required => true %>
    </div>

    <div class=" text-style field form-label-group">
      <%= form.text_field :email, class: 'form-control', placeholder: 'Email', :required => true %>
    </div>

    <div class=" text-style field form-label-group">
      <%= form.text_field :trello, class: 'form-control', placeholder: 'Trello Username' %>
    </div>

    <table class="table w-auto table-borderless mb-0 span2" style="margin:20px 0 0 0">
      <tr class="row">
        <td style="padding: 0 0 0 16px"><%= link_to 'Back', root_path, class:"btn btn-outline-secondary" %></td>
        <td style="padding: 0 0 0 234px"> <%= form.submit :Submit, class:'btn btn-primary'%></td>
      </tr>
    </table>
  </div>
<% end %>
