<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div id="textbox">
    <h1 style="float:left;">Meetings</h1>
    <div style="float:right">  <%= link_to 'Create Meeting', new_meeting_path, class:"btn btn-secondary", style:"color:white;"%></div>
    <div style="clear: both;"></div>
  </div>
  <div class="row mt-3 mb-4">
    <% if @user_meeting1 != nil %>
        <div class="col-auto">
          <div class="card shadow mb-2 h-100" style="width: 21rem;">
              <div class="card-header py-2">
                 <h2 class="m-2"><%= @user_meeting1.name %></h2>
              </div>
              <div class="card-body">
                <% analyzed_1 = false %>
                <% for file in @user_meeting1.file.attachments %>
                  <% if file.content_type == 'application/json' %>
                    <% analyzed_1 = true %>
                    <% download_file_from_s3('smartmeetingsbelieving', "./tmp/" + file.filename.to_s(), file.filename.to_s()) %>
                    <% json_from_file = File.read("tmp/" + file.filename.to_s()) %>
                    <% hash1 = JSON.parse(json_from_file, object_class: OpenStruct) %>
                    <% participants1 = "" %>
                    <% for i in hash1.total_time_spoken %>
                      <% participants1 = participants1 + i[0].to_s() + " " %>
                    <% end %>
                    <h3> Participants: <%=participants1%> </h3>
                    <h3> Duration: <%= hash1.meeting_time %> </h3>
                    <h3> Tags:
                      <% for i in hash1.keywords %>
                        <span class="badge badge-pill badge-secondary"><%= i %></span>
                      <% end %>
                    </h3>
                  <% end %>
                <% end %>
                <% if !analyzed_1 %>
                  <h3> Not Yet Analyzed </h3>
                <% end %>
            </div>
            <div class="card-footer bg-transparent border-0 text-center mb-3">
              <% if @user_meeting1.file.attachments.first != nil %>
                <tr>
                  <td><%= link_to 'Show', @user_meeting1, class:"btn btn-outline-secondary btn-md"%></td>
                  <td><%= link_to 'Edit', edit_meeting_path(@user_meeting1), class:"btn btn-outline-secondary btn-md"%></td>
                  <td><%= link_to 'Destroy', @user_meeting1, class:"btn btn-outline-secondary btn-md", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% else %>
                  <tr>
                    <td><%= link_to "Upload Files", @user_meeting1, class:"btn btn-outline-secondary btn-md"%></td>
                    <td><%= link_to 'Destroy', @user_meeting1, class:"btn btn-outline-secondary btn-md", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
