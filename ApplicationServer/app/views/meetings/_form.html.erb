<%= form_with(model: meeting, local: true) do |form| %>
  <% if meeting.errors.any? %>
    <div id="text-style error_explanation">
      <h2><%= pluralize(meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul class="text-style">
        <% meeting.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class=" text-style field form-label-group">
    <%= form.text_field :name, class: 'form-control', placeholder: 'Meeting Name', :required => true %>
  </div>

  <div class="text-style field">
    <%= form.text_field :participants, class: 'form-control', placeholder: 'Participants', :required => true %>
  </div>

  <div class="user lists" style="margin: 0 0 0 70px">
    <% User.all.each do |user| %>
        <% if user.id == current_user.id %>
            <%= check_box_tag 'user_ids[]', user.id, true -%>
            <%= user.name %> <br />
        <% else %>
          <%= check_box_tag 'user_ids[]', user.id -%>
          <%= user.name %> <br />
        <% end %>
    <% end %>
  </div>
  <div class="text-style actions">
    <%= form.submit :Submit, class: 'btn btn-secondary'%>
  </div>
<% end %>
